<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Task Manager</title>
    <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>
<body class="bg-gray-600">
    <div class="container mx-auto p-10">
        <!-- Form Section -->
        <div class="form mb-10">
            <form action="/create" method="post">
            <input class="block w-3/5 rounded-lg px-5 py-2 bg-gray-100 mb-3" type="text" name="title" placeholder="Title goes here">
            <textarea class="block w-3/5 rounded-md px-5 py-2 resize-none bg-gray-100 h-32" name="details"  placeholder="Write your tasks"></textarea>
            <input class="block rounded-md px-5 mt-3 py-2 bg-blue-600 text-white cursor-pointer hover:bg-blue-700 transition" type="submit" value="Create task">
        </form>
    </div>
        
        <!-- Tasks Section -->
        <div class="tasks">
            <% if(files.length > 0){ %>
                <div class="flex gap-3 flex-wrap">
                    <% files.forEach(function(val){ %>
                        <div class="task w-72 px-3 py-4 rounded-md bg-gray-500">
                            <h1 class="text-black text-3xl tracking-tighter"><%= val %></h1>
                            <div class="flex w-full justify-between items-center mt-3">
                                <a class="text-blue-900 inline-block  hover:text-blue-200" href="/file/<%= val %>">Read more.</a>
                            <a href="/edit/<%= val %>">Edit filename</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <h3 class="text-zinc-300 text-center">No tasks yet.</h3>
            <% } %>
        </div>
    </div>
    
    <script src="/public/javascripts/script.js"></script>
</body>
</html>